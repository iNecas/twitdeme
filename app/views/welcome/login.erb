<%= form_for @u, :url => login_do_path do |form| %>
<table>
	<tr>
		<td><label for="user_username">Username</label></td>
		<td><%= form.text_field :username %></td>
	</tr>
	<tr>
      <td><label for="user_password">Password</label></td>
		<td><%= form.password_field :password %></td>
	</tr>
	<tr>
		<td align="center" colspan="2"><%= form.submit "Login" %></td>
	</tr>
</table>
<% end %>

<%= link_to "Register", register_path %>